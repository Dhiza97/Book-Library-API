<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Search</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <div class="main-container">
        <h1>Book Search</h1>
        
        <!-- Search form -->
        <form action="/" method="GET">
            <input type="text" id="search" name="search" placeholder="Search Book...">
            <button type="submit">Search</button>
        </form>

        <!-- Display search results -->
        <div class="books-result">
            <% if (books && books.length > 0) { %>
                <h2>Search Results</h2>
                <ul class="books-list">
                    <% books.forEach(function(book, index) { %>
                        <li>
                            <div class="img-container">
                                <% if (book.cover) { %>
                                    <img class="book-cover" src="<%= book.cover %>" alt="Book Cover">
                                <% } else { %>
                                    <p>No cover available</p>
                                <% } %>
                            </div>
                            <h3 class="book-title"><%= book.title %></h3>
                            <p class="book-author"><strong>Author(s):</strong><br> <%= book.author %></p>
                        </li>
                        <% if ((index + 1) % 5 === 0) { %>
                            <!-- Add a new row after every 5th book -->
                            </ul><ul class="books-list">
                        <% } %>
                    <% }); %>
                </ul>
            <% } else if (books !== undefined) { %>
                <p>No books found</p>
            <% } %>
        </div>
    </div>
</body>
</html>
